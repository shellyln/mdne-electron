{
  "name": "mdne-electron",
  "version": "0.2.2",
  "private": false,
  "description": "Markdown Neo Edit for Electron - A simple markdown and code editor powered by Markdown-it, Ace and Electron.",
  "keywords": [
    "Markdown",
    "Editor",
    "markdown-it",
    "Ace",
    "PDF",
    "Lisp",
    "LSX",
    "MÃ©nneu",
    "Liyad",
    "Electron",
    "puppeteer"
  ],
  "scripts": {
    "start": "electron .",
    "pack": "run-s dist:clean pack:1",
    "pack:1": "electron-builder --dir -c electron-builder.yml",
    "dist:win": "run-s dist:clean dist:win:1",
    "dist:win:1": "electron-builder -c electron-builder.yml --x64 --win",
    "dist:linux": "run-s dist:clean dist:linux:1",
    "dist:linux:1": "electron-builder -c electron-builder.yml --x64 --linux",
    "dist:mac": "run-s dist:clean dist:mac:1",
    "dist:mac:1": "electron-builder -c electron-builder.yml --x64 --mac",
    "dist": "run-s dist:clean dist:1",
    "dist:1": "electron-builder -c electron-builder.yml",
    "dist:clean": "rm -f ./contents/out/preview.* && touch ./contents/out/preview.html ./contents/out/preview.pdf",
    "build:mainproc": "webpack-cli --mode=development --config webpack.mainproc.config.js",
    "build": "run-s build:mainproc",
    "clean": "rm -rf ./dist && rm -rf ./bin && rm -f ./contents/out/preview.* && rm -rf ./dist.electron",
    "lint": "run-s lint:ts lint:es",
    "lint:ts": "tslint ./src.mainproc/**/*.ts ./src.mainproc/**/*.js -t verbose",
    "lint:es": "eslint ./contents/assets/script/**/*.js",
    "test": "echo test",
    "prepublishOnly": "run-s clean build test lint",
    "import-contents": "run-s import-contents:1 import-contents:2 import-contents:3",
    "import-contents:1": "cp -R ../mdne/contents/assets/script ./contents/assets/.",
    "import-contents:2": "cp -R ../mdne/contents/assets/style ./contents/assets/.",
    "import-contents:3": "rm ./contents/assets/script/backend-emu.js"
  },
  "dependencies": {
    "carlo": "^0.9.46",
    "puppeteer-core": "^5.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@types/node": "^14.14.10",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "bufferutil": "^4.0.2",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.14.0",
    "liyad": "^0.6.0",
    "menneu": "^0.4.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "red-agate": "^0.5.0",
    "sass-loader": "^10.1.0",
    "source-map-loader": "^1.1.2",
    "ts-loader": "^8.0.11",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "utf-8-validate": "^5.0.3",
    "webpack": "^5.7.0",
    "webpack-cli": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shellyln/mdne-electron.git"
  },
  "author": {
    "name": "shellyln",
    "email": "shellyln@users.noreply.github.com"
  },
  "homepage": "https://shellyln.github.io/",
  "license": "ISC"
}
